{
  "functions": {
    "app/api/**/*": {
      "maxDuration": 300,
      "memory": 1024,
      "runtime": "nodejs20.x"
    },
    "app/api/creatify/start-video-workflow/**/*": {
      "maxDuration": 900,
      "memory": 2048,
      "runtime": "nodejs20.x"
    },
    "app/api/projects/**/*": {
      "maxDuration": 60,
      "memory": 512,
      "runtime": "nodejs20.x"
    },
    "app/api/subscriptions/**/*": {
      "maxDuration": 30,
      "memory": 512,
      "runtime": "nodejs20.x"
    }
  },
  "regions": ["fra1", "iad1"],
  "outputFileTracing": true,
  "experimental": {
    "optimizeConcurrency": true
  }
} 